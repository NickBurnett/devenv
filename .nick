alias ls='ls --color=auto'

alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias commit="git commit"
alias pull="git pull"
alias push="git push"

test -f ~/.git-completion.bash && . $_

function promptcommand() {
  local CODE="$?"
  local RESET="\[\e[0m\]"
  local BOLD="\[\e[1m\]"
  local GREEN="\[\e[92m\]"
  local RED="\[\e[91m\]"
  local ORANGE="\[\e[33m\]"
  local LIGHT_GRAY="\[\e[37m\]"
  local DARK_GRAY="\[\e[90m\]"

  local E_CODE="${GREEN}"
  local BRANCH

  if [[ $CODE != 0 ]]; then
    E_CODE="${RED}"
  fi
  git branch 2> /dev/null | grep "*" | cut -c 3- > /dev/null 2>&1
  if [[ $? = 0 ]]; then
    BRANCH="$(git branch 2> /dev/null | grep "*" | cut -c 3-)"
  fi

  PS1="${BOLD}${GREEN}\u${LIGHT_GRAY}@${RED}\H ${DARK_GRAY}(${ORANGE}\w${BRANCH:+" ${LIGHT_GRAY}${BRANCH}"}${DARK_GRAY}) ${E_CODE}Î» ${RESET}"
}
export PROMPT_COMMAND=promptcommand
export BASH_SILENCE_DEPRECATION_WARNING=1
